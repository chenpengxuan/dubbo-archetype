<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<context id="SqlServerTables" targetRuntime="MyBatis3">

		<plugin type="org.mybatis.generator.plugins.ToStringPlugin"></plugin>
		<plugin type="${package}.mybatisgenerator.RenameModelPlugin">
			<property name="prefixes2Remove" value="tb, ymt" />
			<property name="suffix2Append" value="Po" />
		</plugin>
				
		<plugin type="${package}.mybatisgenerator.ForceCreateUpdateTimePlugin">
			<property name="insertTimeColumns" value="dAddTime,CreateTime,TriggerTime, AddTime" />
			<property name="lastUpdateTimeColumns" value="dLastUpdateTime, dUpdateTime,LastUpdateTime" />        
            <property name="dbCurrentTimeExpr" value="getdate()"/>
		</plugin>
		
		<commentGenerator type="${package}.mybatisgenerator.DBCommentGenerator">
			<property name="suppressAllComments" value="true" />
		</commentGenerator>


		<jdbcConnection driverClass="net.sourceforge.jtds.jdbc.Driver"
			connectionURL="jdbc:jtds:sqlserver://172.16.188.81:1433/YmtAlpha"
			userId="dev" password="123456">
			<property name="remarksReporting" value="true" />
		</jdbcConnection>

		<javaModelGenerator
			targetPackage="${package}.infrastructure.db.model"
			targetProject="..\infrastructure\src\main\java">
			<property name="enableSubPackages" value="false" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>
		
		<sqlMapGenerator targetPackage="sqlmap.autogenerated"
			targetProject="..\infrastructure\src\main\resources">
		</sqlMapGenerator>


		<javaClientGenerator type="XMLMAPPER"
			targetPackage="${package}.infrastructure.db.mapper"
			targetProject="..\infrastructure\src\main\java">
		</javaClientGenerator>

		<table tableName="Ymt_Orders" domainObjectName="Orders" >
			<property name="useActualColumnNames" value="true"></property>
			<columnRenamingRule searchString="^i|^d|^f|^b|^s" replaceString=""></columnRenamingRule>
			<columnOverride column="iOrderId" javaType="long" />
			<columnOverride column="iUserId" javaType="long" />
			<columnOverride column="iBuyerId" javaType="long" />
			<columnOverride column="iMainOrderId" javaType="long" />
			<columnOverride column="sAddress" jdbcType="VARCHAR" />
			<columnOverride column="sLeaveWord" jdbcType="VARCHAR" />
			<ignoreColumn column="DataVersion"></ignoreColumn>
			
		</table>

	</context>

</generatorConfiguration>
